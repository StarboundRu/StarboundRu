            <div class="footer">
                {% if nodate is not defined %}
                <div class="date">{% block date %}{% endblock %}</div>
                {% endif %}
                {% block footer %}{% endblock %}
            </div>
            {% endif %}
            {% if withcomments is defined %}
            <div class="footer">
<div id="vk_comments"></div>
<script type="text/javascript">
//VK.Widgets.Comments("vk_comments", {limit: 20, width: "960", attach: "*"});
