    <div class="table">
        <div class="header"><div class="header-left">{% block icon %}<img src="/img/sb/icons/{% if icon is defined %}{{icon}}{% else %}2{% endif %}.png" />{% endblock %}</div><div class="header-text"><div class="text">{% block title %}{% endblock %}</div></div><div class="header-right"></div></div>
        <div class="content">
            {% block custom_content %}
            <div class="text">
                {% block content %}{% endblock %}
            </div>
